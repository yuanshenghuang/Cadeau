@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    @using (Html.BeginForm("Bevestigen", "Home", FormMethod.Post, new { id = "FormBevestigenPage" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <br/>
            <br />
            <div class="form-group">

                @Html.Label("Email", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("Email", new { htmlAttributes = new { @class = "form-control", @id = "emailBevestigenPage" } })
                    <p id="errorTextBevesigenPage">@ViewBag.ErrorText</p>
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Bevestigen" id="BevestigenButton" class="btn btn-default" />
                </div>
            </div>
        </div>
    }



